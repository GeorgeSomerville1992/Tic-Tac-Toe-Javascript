= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :player_one_name
    = f.text_field :player_one_name
  .field
    = f.label :player_one_picture
    = f.text_area :player_one_picture
  .field
    = f.label :player_two_name
    = f.text_field :player_two_name
  .field
    = f.label :player_two_picture
    = f.text_area :player_two_picture
  .actions
    = f.submit 'Save'
